<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="1340.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.CriarPDF">
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Criar PDF" textFill="#bf8ec9">
               <font>
                  <Font size="40.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <VBox alignment="CENTER" prefWidth="100.0" spacing="20.0">
         <children>
            <TextField fx:id="nomeProfessor" maxWidth="1300.0" minHeight="40.0" minWidth="40.0" prefWidth="400.0" promptText="Nome do Professor">
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
            <TextField fx:id="nomeAluno" maxWidth="1300.0" prefWidth="400.0" promptText="Nome do Aluno">
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
            <TextField fx:id="conteudo" maxWidth="1300.0" prefWidth="1300.0" promptText="Conteúdo Gramatical">
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
            <TextField fx:id="vocabulario" maxWidth="1300.0" prefWidth="1300.0" promptText="Vocabulário">
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
         </children>
      </VBox>
      <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" prefHeight="200.0" spacing="20.0">
         <children>
            <ListView fx:id="lista" maxHeight="300.0" maxWidth="1300.0" prefWidth="1300.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
         <children>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#criarPDF" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #E4AADF; -fx-background-radius: 20;" text="Gerar PDF" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
